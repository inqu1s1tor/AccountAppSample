<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_screen_container_background"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AccountantAppStyle">

            <android.support.v7.widget.Toolbar
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize" />


        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:padding="@dimen/main_screen_buttons_wrapper_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/main_screen_header_margin_right"
                android:layout_weight="1"
                android:background="@drawable/pic_income"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_screen_header_text_margin"
                    android:src="@drawable/ic_income_on_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_screen_header_text_margin"
                    android:layout_marginTop="@dimen/main_screen_header_text_margin_top"
                    android:text="@string/main_screen_income_header"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/genralSumIncomeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingBottom="@dimen/main_screen_header_income_padding"
                    android:paddingTop="@dimen/main_screen_header_income_padding"
                    android:textSize="@dimen/main_screen_head_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/main_screen_header_margin_left"
                android:layout_weight="1"
                android:background="@drawable/pic_costs"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_screen_header_text_margin"
                    android:src="@drawable/ic_cost_on_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/main_screen_header_text_margin"
                    android:layout_marginTop="@dimen/main_screen_header_text_margin_top"
                    android:text="@string/main_screen_costs_header"
                    android:textColor="@color/colorOrangeAccent"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/generalSumCostTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorOrangeAccent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/main_screen_header_income_padding"
                    android:paddingTop="@dimen/main_screen_header_income_padding"
                    android:textSize="@dimen/main_screen_head_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/main_screen_buttons_wrapper_padding"
            android:paddingLeft="@dimen/main_screen_buttons_wrapper_padding"
            android:paddingRight="@dimen/main_screen_buttons_wrapper_padding">

            <LinearLayout
                android:id="@+id/buttonIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
                android:background="@color/main_screen_buttons_background_color"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/main_screen_left_stripe_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/main_screen_income_button_light_green"
                    android:src="@drawable/ic_income" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                    android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                    android:paddingTop="@dimen/main_screen_button_text_padding_top"
                    android:text="@string/TextButtonIncome"
                    android:textColor="@color/main_screen_buttons_text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonCosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
                android:background="@color/main_screen_buttons_background_color"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/main_screen_left_stripe_width"
                    android:layout_height="match_parent"
                    android:background="@color/colorOrangeAccent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/main_screen_costs_button_light_green"
                    android:src="@drawable/ic_costs" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                    android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                    android:paddingTop="@dimen/main_screen_button_text_padding_top"
                    android:text="@string/TextButtonCosts"
                    android:textColor="@color/main_screen_buttons_text_color" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
                android:background="@color/main_screen_buttons_background_color"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/main_screen_left_stripe_width"
                    android:layout_height="match_parent"
                    android:background="@color/main_screen_categories_button_dark_orange" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/main_screen_categories_button_light_orange"
                    android:src="@drawable/ic_category" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                    android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                    android:paddingTop="@dimen/main_screen_button_text_padding_top"
                    android:text="@string/TextButtonCategories"
                    android:textColor="@color/main_screen_buttons_text_color" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>