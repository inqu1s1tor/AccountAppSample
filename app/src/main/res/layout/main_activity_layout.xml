<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_columnSpan="11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General cost"/>


        <TextView
            android:id="@+id/generalSumCostTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="general"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="General income"/>

        <TextView
            android:id="@+id/genralSumIncomeTextView"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="general"/>

    </LinearLayout>




    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/TextButtonCosts"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonCosts"
        android:layout_row="8"
        android:layout_column="0" />

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/TextButtonIncome"
        android:id="@+id/buttonIncome"
        android:layout_marginLeft="10dp"
        android:layout_row="8"
        android:layout_column="10" />

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/TextButtonCategories"
        android:id="@+id/buttonCategories"
        android:layout_marginRight="10dp"
        android:layout_row="9"
        android:layout_column="0" />

    <Button
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="@string/TextButtonSettings"
        android:id="@+id/buttonSettings"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_row="9"
        android:layout_column="10" />


</GridLayout>