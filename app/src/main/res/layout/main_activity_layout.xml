<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AccountantAppStyle">

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionBar"
            style="@style/AccountantAppStyle"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize" />


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_income" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General income" />

            <TextView

                android:id="@+id/genralSumIncomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_costs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General cost" />

            <TextView
                android:id="@+id/generalSumCostTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_screen_buttons_margin_top"
        android:orientation="vertical"
        android:padding="@dimen/main_screen_buttons_wrapper_padding">

        <LinearLayout
            android:id="@+id/buttonIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/main_screen_left_stripe_width"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_income" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                android:paddingTop="@dimen/main_screen_button_text_padding_top"
                android:text="@string/TextButtonIncome" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonCosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_costs" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                android:paddingTop="@dimen/main_screen_button_text_padding_top"
                android:text="@string/TextButtonCosts" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_category" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                android:paddingTop="@dimen/main_screen_button_text_padding_top"
                android:text="@string/TextButtonCategories" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_screen_button_margin_bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/main_screen_button_text_margin_left"
                android:paddingBottom="@dimen/main_screen_button_text_padding_bottom"
                android:paddingTop="@dimen/main_screen_button_text_padding_top"
                android:text="@string/TextButtonSettings" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>